
class Solution{

    // arr: input array
    // n: size of array
    //Function to find the sum of contiguous subarray with maximum sum.
    long maxSubarraySum(int arr[], int n){
        
        // Your code here
        int sum = 0;
        int maxi = arr[0];
        
        for(int i=0;i<n;i++)
        {
            sum+=arr[i];
            
            if(sum>maxi)
            maxi = sum;
            
            if(sum<0)
            sum=0;
        }
        return maxi;
        
    }
    
}
